    margin-bottom: 30px; /* Space below the header */
    width: 100%; /* Ensure header spans the entire width */
}

/* Navigation Bar Styling */
nav ul {
    list-style: none; /* Remove default list styles */
    display: flex; /* Display the list items in a row */
    justify-content: center; /* Center-align navigation links */
    gap: 20px; /* Space between the navigation links */
    padding: 10px 0; /* Padding for the navigation links */
}

nav li {
    display: inline-block; /* Display the list items inline */
}

nav a {
    color: white; /* White text for links */
    text-decoration: none; /* Remove underline from links */
    font-size: 18px; /* Font size for navigation links */
    padding: 10px 20px; /* Padding around the links */
    text-transform: uppercase; /* Uppercase text for links */
    border-radius: 5px; /* Rounded corners for the links */
    transition: background-color 0.3s ease; /* Smooth transition for background color on hover */
}

/* Hover Effect for Navigation Links */
nav a:hover {
    background-color: #0044cc; /* Change background color when hovering */
    color: white; /* Keep text white on hover */
}

/* Section Title Styling (h2, h4) */
